            android:name="suave.ms.tracker.AboutMS"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="suave.ms.tracker.FutureAppointment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="suave.ms.tracker.MSResources"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="suave.ms.tracker.MSProfile"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>